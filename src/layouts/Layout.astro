---
import "../styles/styles.css";
import Image from "astro/components/Image.astro";
import HeroImage from "../../public/images/hero-image.webp";
import { ViewTransitions } from "astro:transitions";
import Footer from "../common/components/Footer.astro";
import Navbar from "../common/components/Navbar.astro";
import { SEO } from "astro-seo";
import { seoAstro } from "../common/SEO/seo";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <SEO
      title={title}
      description={seoAstro.description}
      openGraph={{
        basic: {
          title: `${seoAstro.title}`,
          type: "A type.",
          image: `${seoAstro.ogImage}`,
        },
      }}
      twitter={{
        creator: `${seoAstro.twitterCreator}`,
      }}
      canonical={`${seoAstro.canonical}`}
      extend={{
        link: [
          {
            rel: "apple-touch-icon",
            href: "/image/iconified/apple-touch-icon.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "72x72",
            href: "/image/iconified/apple-touch-icon-72x72.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "76x76",
            href: "/image/iconified/apple-touch-icon-76x76.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "114x114",
            href: "/image/iconified/apple-touch-icon-114x114.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "120x120",
            href: "/image/iconified/apple-touch-icon-120x120.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "152x152",
            href: "/image/iconified/apple-touch-icon-152x152.png",
          },
          {
            rel: "apple-touch-icon",
            sizes: "180x180",
            href: "/image/iconified/apple-touch-icon-180x180.png",
          },
        ],
        meta: [
          {
            name: "twitter:image",
            content: `${seoAstro.ogImage}`,
          },
          { name: "twitter:title", content: `${seoAstro.title}` },
          { name: "twitter:description", content: `${seoAstro.description}` },
        ],
      }}
    />
    <ViewTransitions />
  </head>
  <body>
    <div class="container__hero">
      <Image
        src={HeroImage}
        alt="EstaciÃ³n de Servicio ACA Juarez"
        loading="eager"
      />
    </div>
    <Navbar />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style>
  .container__hero {
    width: 100%;
    height: 35dvh;
    position: absolute;
    z-index: -1;
  }
  img {
    width: 100%;
    height: 35dvh;
    mask-image: linear-gradient(black 50%, transparent);
    object-fit: cover;
    object-position: center;
    aspect-ratio: 16/9;
  }

  .container {
    width: 90%;
    max-width: var(--max-width);
    margin: 1rem auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem 0;
  }
