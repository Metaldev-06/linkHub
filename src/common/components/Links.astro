---
import type { Link } from "../interfaces/";

interface Props {
  links: Link[];
}

const { links } = Astro.props;
---

<section class="links__container">
  {
    links.map((link: Link) => (
      <a
        href={link.url}
        target={link.newTab ? "_blank" : "_self"}
        rel={link.newTab ? "noopener noreferrer" : undefined}
      >
        {link.image ? (
          <img src={link.image} alt={link.title} loading="eager" />
        ) : (
          <span class="icon">{link.icon || "ðŸ”—"}</span>
        )}

        <p>{link.title}</p>
      </a>
    ))
  }
</section>

<style>
  .links__container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;

    a {
      width: 100%;
      height: 58px;
      background-color: white;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
      padding: 1rem;
      transition: all 0.2s;
      color: black;

      img {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
        aspect-ratio: 1/1;
      }

      p {
        width: 100%;
        font-weight: bold;
      }

      &:hover {
        transform: scale(1.02);
        cursor: pointer;
        background-color: #f5f5f5;
        box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.3);
      }
    }
  }
</style>
